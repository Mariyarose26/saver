<div class="main">
  <div class="main-container">
    <h2><%= @folder.name.capitalize %></h2>
    <%# ---------------------------------------------- %>
    <div id="section-container-left" >
      <% @sections.each do |section| %>
        <% if section.section_type == "todo" %>
          <div class = "todo-container">
            <div class="page-header">
              <h1>My Tasks</h1>
              <%= image_tag("bar.png") %>
              <div class = "todo-card">
                <ul id="tasks-list">
                  <% @tasks[section.id].each do |task| %>
                    <li>
                      <i class="fas fa-grip-lines mr-2"></i>
                      <% if task.completed == "completed" %>
                        <a class = "add" href="<%=  %>"><%= image_tag("checked.png", height: "15", width: "15") %></a>
                      <% else %>
                        <a class = "add" href="<%=  %>"><%= image_tag("empty.png", height: "15", width: "15") %></a>
                      <% end %>
                      <%= link_to task.title, edit_task_path(task) %>
                      <div id = "task" class = "card">
                        <%= simple_form_for task, html: { class: "d-none", data: { edit_movie_target: "form" } } do |f| %>
                          <%= f.input :title %>
                          <%= f.input :description %>
                          <%= f.input :date, as: :date, html5: true %>
                          <%= f.input :is_event %>
                          <%= f.input :completed, collection: Task.completeds.keys %>
                          <%= f.submit %>
                        <% end %>
                      </div>
                      <%= link_to "Delete", task_path(task.id),method: :delete,  data: { confirm: "Are you sure?" } %>
                      <% if task.completed == "completed" %>
                      <% end %>
                    </li>
                  <% end %>
                </div>
              </ul>
              <a class = "add" href="<%= new_section_task_path(section) %>"><%= image_tag("add.png") %></a>
            </div>
            <%= link_to "Delete This Section", section_path(section), method: :delete,  data: { confirm: "Are you sure?" } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%# ---------------------------------------------- %>
